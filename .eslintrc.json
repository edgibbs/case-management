{
    "extends": [
      "standard",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier",
      "prettier/react",
      "prettier/standard",
      "plugin:no-unsanitized/DOM"
    ],
    "plugins": [
      "react",
      "jsx-a11y",
      "jest",
      "prettier",
      "standard",
      "no-unsanitized"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "node": true,
      "jest/globals": true
    },
    "rules": {
      "prettier/prettier": "error"
    }
}
